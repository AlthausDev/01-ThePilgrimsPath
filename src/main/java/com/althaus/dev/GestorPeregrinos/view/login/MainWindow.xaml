<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="300">
    <Grid Background="#FF3C4044">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="214" Width="144">
            <Label Content="Login" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Usuario" Foreground="#FFF1F1F1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="txtUsuario" VerticalAlignment="Center" Width="120" Height="23" Margin="0,0,0,10"/>

            <Label Content="Contraseña" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" VerticalAlignment="Center" Width="120" Height="21" Margin="0,0,0,30"/>
            <Button x:Name="btnLogin" Content="Entrar" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
